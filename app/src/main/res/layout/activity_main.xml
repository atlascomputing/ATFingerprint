<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <Button
            android:id="@+id/btn_secugen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SecuGen" />

        <Button
            android:id="@+id/btn_mantra_morfin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantra Morfin" />

        <Button
            android:id="@+id/btn_mantra_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantra MID" />

        <Button
            android:id="@+id/btn_mantra_mfs100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantra MFS100" />

        <Button
            android:id="@+id/btn_morpho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Morpho" />

        <Button
            android:id="@+id/btn_fp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FP" />

        <Button
            android:id="@+id/btn_auto_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Detect" />

    </LinearLayout>


</LinearLayout>